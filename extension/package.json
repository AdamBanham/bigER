{
    "name": "erdiagram",
    "displayName": "bigER Modeling Tool",
    "description": "Entity Relationship Diagrams with a textual editor and SQL code generation.",
    "version": "0.0.3",
    "publisher": "BIGModelingTools",
    "categories": [
        "Programming Languages",
        "Visualization"
    ],
    "keywords": [
        "Entity Relationship",
        "Data Modeling",
        "Diagram",
        "Language Server",
        "ERD"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/borkdominik/bigER"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.56.0"
    },
    "icon": "media/logo.png",
    "galleryBanner": {
        "color": "#1d1d1d",
        "theme": "dark"
    },
    "main": "./pack/main",
    "activationEvents": [
        "onLanguage:erdiagram",
        "onCommand:erdiagram.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview",
        "media"
    ],
    "contributes": {
        "languages": [
            {
                "id": "erdiagram",
                "aliases": [
                    "erdiagram",
                    "erd"
                ],
                "extensions": [
                    ".erd"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "erdiagram",
                "scopeName": "source.erd",
                "path": "./syntaxes/erdiagram.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "erdiagram.diagram.open",
                "title": "Open ER Diagram",
                "icon": "$(type-hierarchy-super)",
                "category": "ER Diagram"
            },
            {
                "command": "erdiagram.diagram.fit",
                "title": "Fit to Screen",
                "category": "ER Diagram"
            },
            {
                "command": "erdiagram.diagram.center",
                "title": "Center selection",
                "category": "ER Diagram"
            },
            {
                "command": "erdiagram.diagram.export",
                "title": "Export diagram to SVG",
                "category": "ER Diagram"
            },
            {
                "command": "erdiagram.diagram.delete",
                "title": "Delete selected element",
                "category": "ER Diagram"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "erdiagram.diagram.open",
                    "when": "editorLangId == 'erdiagram'",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "erdiagram.diagram.open",
                    "when": "editorLangId == 'erdiagram'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "erdiagram.diagram.open",
                    "when": "resourceExtname == '.erd'",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "erdiagram.diagram.open",
                    "when": "editorLangId == 'erdiagram'"
                },
                {
                    "command": "erdiagram.diagram.fit",
                    "when": "erdiagram-diagram-focused"
                },
                {
                    "command": "erdiagram.diagram.center",
                    "when": "erdiagram-diagram-focused"
                },
                {
                    "command": "erdiagram.diagram.delete",
                    "when": "erdiagram-diagram-focused"
                },
                {
                    "command": "erdiagram.diagram.export",
                    "when": "erdiagram-diagram-focused"
                }
            ]
        },
        "keybindings": [
            {
                "command": "erdiagram.diagram.open",
                "key": "ctrl+o",
                "mac": "cmd+o",
                "when": "resourceExtname == '.erd'"
            },
            {
                "command": "erdiagram.diagram.delete",
                "key": "ctrl+backspace",
                "mac": "cmd+backspace",
                "when": "erdiagram-diagram-focused"
            },
            {
                "command": "erdiagram.diagram.fit",
                "key": "ctrl+f",
                "mac": "cmd+f",
                "when": "erdiagram-diagram-focused"
            }
        ]
    },
    "dependencies": {
        "sprotty": "0.11.1",
        "sprotty-vscode": "^0.2.0",
        "sprotty-vscode-webview": "^0.2.0",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.56.0",
        "@vscode/webview-ui-toolkit": "0.8.4",
        "rimraf": "latest",
        "ts-loader": "^8.0.14",
        "typescript": "^4.3.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^4.9.2"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build && yarn run copy-webview",
        "clean": "rimraf extension/lib extension/pack",
        "build": "webpack --mode=development",
        "watch": "webpack --mode=development --watch",
        "copy-webview": "cp ../webview/out/* pack/"
    }
}
