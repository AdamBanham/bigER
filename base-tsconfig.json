{
    "compilerOptions": {
        "declaration": true,                     
        "declarationMap": true,
        "noUnusedLocals": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,                          
        "downlevelIteration": true,
        "target": "es6",  
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "skipLibCheck": true
    }
}  